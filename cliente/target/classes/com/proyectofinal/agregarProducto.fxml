<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="605.0" prefWidth="509.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyectofinal.controlador.AgregarProductoController">
    <children>
        <Label layoutX="10.0" layoutY="-1.0" style="-fx-font-size: 20; -fx-font-weight: bold;" text="Agregar Producto" />
        <TextField fx:id="nombreField" layoutX="20" layoutY="40" promptText="Nombre del Producto" />
        <TextField fx:id="codigoField" layoutX="20" layoutY="80" promptText="Código del Producto" />
        <TextField fx:id="categoriaField" layoutX="20" layoutY="120" promptText="Categoría" />
        <TextField fx:id="precioField" layoutX="20" layoutY="160" promptText="Precio" />
        <TextArea fx:id="descripcionArea" layoutX="20.0" layoutY="200.0" prefHeight="100" promptText="Descripción" />
        
        <Label layoutX="20" layoutY="320" text="Seleccionar Imagen:" />
        <Button layoutX="150" layoutY="315" onAction="#cargarImagen" text="Cargar Imagen" />
        <ImageView fx:id="imagenView" fitHeight="200" fitWidth="200" layoutX="20" layoutY="350" />
        
        <Button fx:id="agregarButton" layoutX="20.0" layoutY="580.0" onAction="#agregarProducto" text="Agregar Producto" />
        <Button fx:id="cancelarButton" layoutX="150.0" layoutY="580.0" onAction="#cancelar" text="Cancelar" />
    </children>
</AnchorPane>
